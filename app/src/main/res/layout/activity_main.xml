<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <github.hellocsl.cursorwheel.CursorWheelLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/wheel_text"
        android:layout_width="280dip"
        android:layout_height="280dip"
        app:wheelCursorColor="@color/colorAccent"
        app:wheelCursorHeight="19dip"
        app:wheelItemRotateMode="none"
        app:wheelSelectedAngle="270"
        >
    </github.hellocsl.cursorwheel.CursorWheelLayout>

    <Button
        android:id="@+id/button"
        android:onClick="onSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:text="Button" />
</RelativeLayout>